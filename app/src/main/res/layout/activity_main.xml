<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/file"
    tools:context="com.example.main.yahtzeemockup.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:contentDescription=""
        android:visibility="visible"
        app:srcCompat="@drawable/personicon"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp"/>

    <TextView
        android:id="@+id/usernameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        android:text="Player 1"
        android:textSize="24sp"/>

    <Button
        android:id="@+id/rollBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/usernameTxt"
        android:layout_marginStart="89dp"
        android:layout_toEndOf="@+id/usernameTxt"
        android:text="Roll"/>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/rollBtn"
        android:layout_toEndOf="@+id/rollBtn"
        app:srcCompat="@drawable/dice"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="menu"
        android:textSize="8sp"/>

    <LinearLayout
        android:id="@+id/scoringArea"
        android:layout_width="150dp"
        android:layout_height="400dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="26dp"
        android:orientation="vertical">

        <TableRow
            android:id="@+id/scoresRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/acesTxt"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:background="@drawable/cell_border"
                android:padding="2dp"
                android:text="Aces:"
                android:textColor="@color/scoreCardText"/>

            <TextView
                android:id="@+id/acesScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cell_border"
                android:padding="2dp"
                android:text="0"
                android:textColor="@color/scoreCardText"/>
        </TableRow>

        <TableRow
            android:id="@+id/scoresRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
