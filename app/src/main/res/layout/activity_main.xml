        <TableRow
            android:id="@+id/scoresRow14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/yahtzeeTxt"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:background="@drawable/cell_border_yahtzee"
