            <TextView
                android:id="@+id/totalFullTxt"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:background="@drawable/cell_border"
                android:text="TOTAL:"
                android:textColor="@color/scoreCardText"
                android:textSize="24dp"/>

            <TextView
                android:id="@+id/totalFullScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cell_border"
                android:text="0"
                android:textColor="@color/scoreCardText"
                android:textSize="24dp"/>

        </TableRow>
    </LinearLayout>

    <Button
        android:id="@+id/dice1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/scoringArea"
        android:layout_marginStart="28dp"
        android:layout_toEndOf="@+id/scoringArea"
        android:background="@drawable/dice_selector"/>

    <Button
        android:id="@+id/dice3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/dice1"
        android:layout_gravity="center_horizontal"
        android:layout_toEndOf="@+id/rollBtn"
        android:background="@drawable/dice_selector"/>

    <Button
        android:id="@+id/dice2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/dice3"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="27dp"
        android:layout_toStartOf="@+id/dice3"
        android:background="@drawable/dice_selector"/>

    <Button
        android:id="@+id/dice4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/dice1"
        android:layout_below="@+id/dice2"
        android:layout_marginTop="27dp"
        android:background="@drawable/dice_selector"/>

    <Button
        android:id="@+id/dice5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/dice4"
        android:layout_alignBottom="@+id/dice4"
        android:layout_toEndOf="@+id/dice2"
        android:background="@drawable/dice_selector"/>


</RelativeLayout>
