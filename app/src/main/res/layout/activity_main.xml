                android:textColor="@color/scoreCardText"/>

            <TextView
                android:id="@+id/smstraightScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cell_border"
                android:onClick=""
                android:padding="2dp"
                android:text="0"
                android:textColor="@color/scoreCardText"/>
        </TableRow>

        <TableRow
            android:id="@+id/scoresRow13"
            android:layout_width="match_parent"
